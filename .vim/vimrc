"Colors




""""""""""""""""""""""""""""""""""""""""""""""""""''""""""""""""""""""""""""""""""""""""""""""""""""""
" functions
"map <silent> <C-r> :call CPP()<CR>
"
func C()
    exec "!clear && gcc % &&./a.out"
endfunc

func CPP()
    exec "!clear && g++ % &&./a.out"
endfunc
"
func PYTHON()
    exec "!clear && python3 %"
endfunc

autocmd FileType c map <C-r> :call C()<CR>
autocmd FileType cpp map <C-r> :call CPP()<CR>
autocmd FileType python map <C-r> :call PYTHON()<CR>

