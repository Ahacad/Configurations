label-focused-background       = ${colors.background-focused}
label-focused-empty-foreground = ${colors.foreground-focused}
label-focused-empty-background = ${colors.background-focused}
label-urgent-foreground        = ${colors.red}

[module/date]
type = internal/date
interval = 1
label = %time% - %date%
time     = %R
date     = %a, %b %d
